<h1>People in the Family</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= link_to person.name, person %></td>
    <td><%= person.birthdate %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Person', new_person_path, class: 'create_person' %>
